{
  "manifest_version": 3,
  "name": "YouFocus",
  "version": "1.0",
  "description": "A simple Chrome Extension that allows you to make youtube less distractive by hiding unnecessary stuff",

  "icons": {
    "16": "icons/icon_16.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["shared.js", "content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },

  "permissions": ["tabs", "activeTab", "storage"]
}
